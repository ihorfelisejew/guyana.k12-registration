<script>
    $(document.body).on('change','input[type=checkbox]',function(){
            if ($(this).prop('checked') == 1){
                var val = $('#no_students').val();
                $('#no_students').val((val*1)+1);
            }
            else{
                var val = $('#no_students').val();
                $('#no_students').val((val*1)-1);
                // alert($('#no_students').val());
            }
        }
    );

    function sendMsg(e) {
      if(e.keyCode == 13){
          sendMessage();
      }
    }
</script>
